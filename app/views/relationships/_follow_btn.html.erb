<div class="follows">
  <% if current_user.following?(user) %>
    <%= form_with url: relationship_path(user), method: :delete, remote: true do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォロー中', class: 'follow-btn follow' %>
    <% end %>
  <% else %>
    <%= form_with url: relationships_path, remote: true do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォローする', class: 'follow-btn unfollow' %>
    <% end %>
  <% end %>
</div>

<%= render 'shared/header' %>
<div class="article-new-contents">

  <div class="page-title">
    <h1>新規記事投稿</h1>
  </div>

  <div class="article-new-form">
    <%= form_with model: @article, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="new-articles">
      <div class="article-title">
        <p>タイトル</p>
        <%= f.text_field :title, class:"input-article-title", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
      </div>

      <div class="article-text">
        <p>本文</p>
        <%= f.text_area :text, class:"input-article-text", placeholder:"本文", rows:"20", maxlength:"15000", wrap:"soft" %>
      </div>

      <%= f.submit "記事を投稿する", class:"submit-article-btn" %>
    </div>
    <% end %>
  </div>
</div>